# Generated from: ~/.config/hypr-system/templates/dunst.template

[global]
    # Display
    monitor = 0
    follow = mouse

    # Geometry
    width = (250, 400)
    height = 200
    origin = top-right
    offset = 20x50

    # Appearance
    corner_radius = ${rounding}
    frame_width = 2
    frame_color = "${accent_primary}"
    background = "${primary_secondary}f0"
    foreground = "${text_primary}"

    # Typography
    font = ${font_primary} ${font_size_normal}
    line_height = 0
    markup = full
    format = "<b>%s</b>\n%b"
    alignment = left
    vertical_alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ellipsize = middle
    ignore_newline = no

    # Icons
    icon_position = left
    min_icon_size = 24
    max_icon_size = 48
    icon_path = /usr/share/icons/Papirus-Dark/16x16/status/:/usr/share/icons/Papirus-Dark/16x16/devices/:/usr/share/icons/Papirus-Dark/16x16/apps/

    # Progress bar
    progress_bar = true
    progress_bar_height = 8
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300
    progress_bar_corner_radius = 4

    # History
    sticky_history = yes
    history_length = 50

    # Misc
    dmenu = rofi -dmenu -p dunst:
    browser = firefox
    always_run_script = true
    title = Dunst
    class = Dunst
    startup_notification = false
    verbosity = mesg

    # Legacy
    force_xinerama = false

    # Mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action, close_current
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "${primary_tertiary}e0"
    foreground = "${text_secondary}"
    frame_color = "${neutral_tertiary}"
    timeout = 5
    default_icon = dialog-information

[urgency_normal]
    background = "${primary_secondary}f0"
    foreground = "${text_primary}"
    frame_color = "${accent_primary}"
    timeout = 8
    default_icon = dialog-information

[urgency_critical]
    background = "${status_error}f0"
    foreground = "${text_primary}"
    frame_color = "${status_error}"
    timeout = 0
    default_icon = dialog-error

