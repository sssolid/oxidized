    "media": {
      "name": "üéµ Media Controls",
      "icon": "üéµ",
      "bindings": {
        ", XF86AudioRaiseVolume": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh up",
          "description": "Volume Up"
        },
        ", XF86AudioLowerVolume": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh down",
          "description": "Volume Down"
        },
        ", XF86AudioMute": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh mute",
          "description": "Mute Audio"
        },
        ", XF86AudioPlay": {
          "command": "exec, playerctl play-pause",
          "description": "Play/Pause"
        },
        ", XF86AudioNext": {
          "command": "exec, playerctl next",
          "description": "Next Track"
        },
        ", XF86AudioPrev": {
          "command": "exec, playerctl previous",
          "description": "Previous Track"
        },
        ", XF86MonBrightnessUp": {
          "command": "exec, brightnessctl s +5%",
          "description": "Brightness Up"
        },
        ", XF86MonBrightnessDown": {
          "command": "exec, brightnessctl s 5%-",
          "description": "Brightness Down"
        }
      }
    },
