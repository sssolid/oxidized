{
  "categories": {
    "applications": {
      "name": "üöÄ Applications",
      "icon": "üöÄ",
      "bindings": {
        "SUPER, RETURN": {
          "command": "exec, kitty",
          "description": "Terminal (Kitty)"
        },
        "SUPER, SPACE": {
          "command": "exec, rofi -show drun",
          "description": "App Launcher (Rofi)"
        },
        "SUPER, E": {
          "command": "exec, thunar",
          "description": "File Manager (Thunar)"
        },
        "SUPER, Q": {
          "command": "killactive",
          "description": "Close Window"
        },
        "SUPER, M": {
          "command": "exit",
          "description": "Exit Hyprland"
        }
      }
    },
    "windows": {
      "name": "ü™ü Window Management",
      "icon": "ü™ü",
      "bindings": {
        "SUPER, left": {
          "command": "movefocus, l",
          "description": "Focus Left"
        },
        "SUPER, right": {
          "command": "movefocus, r",
          "description": "Focus Right"
        },
        "SUPER, up": {
          "command": "movefocus, u",
          "description": "Focus Up"
        },
        "SUPER, down": {
          "command": "movefocus, d",
          "description": "Focus Down"
        },
        "SUPER SHIFT, left": {
          "command": "movewindow, l",
          "description": "Move Window Left"
        },
        "SUPER SHIFT, right": {
          "command": "movewindow, r",
          "description": "Move Window Right"
        },
        "SUPER SHIFT, up": {
          "command": "movewindow, u",
          "description": "Move Window Up"
        },
        "SUPER SHIFT, down": {
          "command": "movewindow, d",
          "description": "Move Window Down"
        },
        "SUPER CTRL, left": {
          "command": "resizeactive, -20 0",
          "description": "Resize Left"
        },
        "SUPER CTRL, right": {
          "command": "resizeactive, 20 0",
          "description": "Resize Right"
        },
        "SUPER CTRL, up": {
          "command": "resizeactive, 0 -20",
          "description": "Resize Up"
        },
        "SUPER CTRL, down": {
          "command": "resizeactive, 0 20",
          "description": "Resize Down"
        },
        "SUPER, F": {
          "command": "fullscreen, 0",
          "description": "Fullscreen"
        },
        "SUPER, V": {
          "command": "togglefloating",
          "description": "Toggle Floating"
        },
        "SUPER, J": {
          "command": "togglesplit",
          "description": "Toggle Split"
        }
      }
    },
    "workspaces": {
      "name": "Workspace Management",
      "icon": "üó°Ô∏è",
      "bindings": {
        "SUPER CTRL, W": {
          "command": "exec, python3 ~/.config/hypr-system/generators/apply-theme.py --switch-workspace-mode",
          "description": "Quick switch workspace mode"
        },
        "SUPER, S": {
          "command": "togglespecialworkspace, magic",
          "description": "Special Workspace"
        }
      }
    },
    "media": {
      "name": "üéµ Media Controls",
      "icon": "üéµ",
      "bindings": {
        ", XF86AudioRaiseVolume": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh up",
          "description": "Volume Up"
        },
        ", XF86AudioLowerVolume": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh down",
          "description": "Volume Down"
        },
        ", XF86AudioMute": {
          "command": "exec, ~/.config/hypr-system/scripts/volume-control.sh mute",
          "description": "Mute Audio"
        },
        ", XF86AudioPlay": {
          "command": "exec, playerctl play-pause",
          "description": "Play/Pause"
        },
        ", XF86AudioNext": {
          "command": "exec, playerctl next",
          "description": "Next Track"
        },
        ", XF86AudioPrev": {
          "command": "exec, playerctl previous",
          "description": "Previous Track"
        },
        ", XF86MonBrightnessUp": {
          "command": "exec, brightnessctl s +5%",
          "description": "Brightness Up"
        },
        ", XF86MonBrightnessDown": {
          "command": "exec, brightnessctl s 5%-",
          "description": "Brightness Down"
        }
      }
    },
    "system": {
      "name": "üîß System Controls",
      "icon": "üîß",
      "bindings": {
        "SUPER, T": {
          "command": "exec, ~/.config/hypr-system/scripts/theme-manager.sh",
          "description": "Theme Manager"
        },
        "SUPER, W": {
          "command": "exec, ~/.config/hypr-system/scripts/wallpaper-cycle.sh",
          "description": "Cycle Wallpaper"
        },
        "SUPER, H": {
          "command": "exec, ~/.config/hypr-system/scripts/hotkey-display.sh",
          "description": "Show Hotkeys"
        },
        "SUPER, C": {
          "command": "exec, ~/.config/hypr-system/scripts/config-editor.sh",
          "description": "Configuration Editor"
        },
        "SUPER, L": {
          "command": "exec, hyprlock",
          "description": "Lock Screen"
        },
        "SUPER SHIFT, S": {
          "command": "exec, grim -g \"$(slurp)\" - | wl-copy",
          "description": "Area Screenshot"
        },
        "SUPER, Print": {
          "command": "exec, grim - | wl-copy",
          "description": "Full Screenshot"
        },
        "SUPER, B": {
          "command": "exec, ~/.config/hypr-system/scripts/bluetooth-control.sh",
          "description": "Bluetooth Control"
        }
      }
    },
    "mouse": {
      "name": "üñ±Ô∏è Mouse Controls",
      "icon": "üñ±Ô∏è",
      "bindings": {
        "SUPER, mouse:272": {
          "command": "movewindow",
          "description": "Move Window",
          "type": "bindm"
        },
        "SUPER, mouse:273": {
          "command": "resizewindow",
          "description": "Resize Window",
          "type": "bindm"
        }
      }
    }
  }
}
